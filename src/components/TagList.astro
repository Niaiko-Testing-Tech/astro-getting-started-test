---
const {tags} = Astro.props;
---

<div class="tags">
    {tags.map((tag:any) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>

<style>
    .tags {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 50px;
    }
  
    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }

    .tag a {
        color: #00539F;
        text-decoration: none;
    }

    .tag a::before{
        content: '# '
    }
    .tag a:hover{
        color: black;
    }
</style>