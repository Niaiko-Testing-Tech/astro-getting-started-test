---
import BlogPost from "../../components/BlogPost.astro";
import BaseLayout from "../../layouts/BaseLayout.astro"

export async function getStaticPaths() {
    const allPosts = Object.values(import.meta.glob("../posts/*.md", {eager: true}));
    const uniqueTags = [...(new Set(allPosts.map((post:any) => post.frontmatter.tags).flat()))].filter((t:any) => (t!==undefined));
    return uniqueTags.map((t:string) => {
        const filteredPosts = allPosts.filter((post:any) => post.frontmatter.tags?.includes(t));
        return {
            params: { tag : t },
            props: { posts : filteredPosts }
        };
    })
};

const {tag} = Astro.params; // don't confuse Astro.props and Astro.params (URL params)
const {posts} = Astro.props; // the props we manually passed above
---

<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
    </ul>
</BaseLayout>